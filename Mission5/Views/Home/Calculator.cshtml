@{
    ViewData["Title"] = "Calculator";
}
<h1 style="text-align: center;">Ski Lessons @ViewData["Title"]</h1>

<p style="max-width: 600px;">Use this page to help calculate how much you would be charged for ski lessons!</p>
<br/>
<br/>
<h2 style="text-align: center">Ski Lesson Form: </h2>
<br/>
<form style="text-align: center">
    <label>Total Hours Needed: </label>
    <input type="number" id="numHours" min="1"/>
    <br/>
    <br/>
    <label>Hourly Charge: </label>
    <input id="hourlyCharge" value="$50" readonly />
    <br/>
    <br/>
    <input type="button" value="Calculate Total" id="btnCalculate" />
    <br/>
    <br/>
    <br/>
</form>

<label id="grandTotal" style="display: block; text-align: center;"></label>

